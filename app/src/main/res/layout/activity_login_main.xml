<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:id="@+id/formulario_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login" />

        <EditText
            android:id="@+id/formulario_login_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senha" />

        <EditText
            android:id="@+id/formulario_login_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="20" />

        <Button
            android:id="@+id/btn_logar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="realizarLogin"
            android:text="Logar" />

        <Button
            android:id="@+id/btn_criarConta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="criarLoginESenhaFirebase"
            android:text="Criar Conta" />

    </LinearLayout>
</ScrollView>
